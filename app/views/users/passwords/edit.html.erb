<h2><%= t 'views.users.passwords.edit.title' %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, novalidate: false }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <fieldset>
    <%= f.input :password, label: t('views.users.passwords.edit.new_password'),required: true, autofocus: true,
                hint: t('views.users.registrations.new.minimum_password', min: @minimum_password_length) %>
    <%= f.input :password_confirmation, label: t('views.users.passwords.edit.new_password_confirm'),
                required: true %>
  </fieldset>

  <div class="form-actions">
    <%= f.button :submit, t('views.users.passwords.edit.change_password') %>
  </div>
<% end %>

